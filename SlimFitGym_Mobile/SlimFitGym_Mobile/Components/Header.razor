@inject NavigationManager NavigationManager
@using SlimFitGym_Mobile.Models

<div class="container d-flex justify-content-between align-items-center py-2">
    <div class="flex-fill text-center">
        <h1 class="fw-bolder display-4 m-0">Slim Fit Gym</h1>
    </div>

    @if (AccountModel.LoggedInUser != null)
    {
        <div class="dropdown position-relative">
            <button class="btn p-0 border-0 bg-transparent" type="button" id="logoutDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="data:image/png;base64," alt="login icon">
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="#" @onclick="Logout">Kijelentkezés</a></li>
            </ul>
        </div>
    }
    else
    {
        <NavLink class="nav-item custom-navlink d-flex align-items-center" href="/login" active-class="active">
            <img src="data:image/png;base64," alt="login icon">
        </NavLink>
    }
</div>

@code {
    private void Logout()
    {
        //TODO: Implement logout
        AccountModel.LoggedInUser = null;
        StateHasChanged();
        NavigationManager.NavigateTo("/", forceLoad: true);
    }
}
@page "/newPassword"
@using SlimFitGym_Mobile.Models
@inject NavigationManager NavigationManager
@using SlimFitGym_Mobile.Services
@inject DataService DataService
@inject AuthService AuthService

<div class="border rounded-3 d-inline-block mt-3">
    <NavLink href="/login" class="d-block p-1">
        <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAeCAYAAAA7MK6iAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAeUlEQVR4nO3XQQrCMBCF4e8MWkrvErLw/oeRWlxXChHEVRd1hHT+C/zJ42WY0BEjrtHSigfukfKKBStmXCKkpd10kz5xS+mRZLw/pWR7u4t3+JAubSzqWvy3qN+kfM3YBVKy7c72zuvXejtEy+d2gO1HEcqIKVq6mxcYKlU4XwQ2VAAAAABJRU5ErkJggg==" alt="back">
    </NavLink>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Új jelszó</h2>
                    <form @onsubmit="saveNewPassword">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="newPasswordEmail" placeholder="Email" @bind="email">
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Új jelszó</label>
                            <input type="password" class="form-control" id="newPassword" placeholder="Új jelszó" @bind="newPassword">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Új jelszó újra</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Új jelszó újra" @bind="newPasswordAgain">
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Mentés</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @((MarkupString)errorMessage.Replace("\n", "<br>"))
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email;
    private string newPassword;
    private string newPasswordAgain;
    private string errorMessage;

    private void saveNewPassword()
    {
        errorMessage = string.Empty;

        if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(newPassword) || string.IsNullOrEmpty(newPasswordAgain))
        {
            errorMessage = "Minden mező kitöltése kötelező!";
            return;
        }
        if (!AuthService.IsValidEmail(email))
        {
            errorMessage = "Az email cím formátuma nem megfelelő!";
            return;
        }
        if (!AuthService.IsValidPassword(newPassword))
        {
            errorMessage = "A jelszó formátuma nem megfelelő!\n- Minimum 8 karakter\n- Nagy betű\n- Szám\n- Speciális karakter";
            return;
        }
        if (newPassword != newPasswordAgain)
        {
            errorMessage = "A két jelszó nem egyezik!";
            return;
        }

        //AuthService.ResetPassword(email, newPassword, newPasswordAgain);
        NavigationManager.NavigateTo("/login");
    }
}
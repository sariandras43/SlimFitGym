                    <h2 class="card-title text-center mb-4">Bejelentkezés</h2>
                    <form @onsubmit="login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="Email" @bind="email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Jelszó</label>
                            <input type="password" class="form-control" id="password" placeholder="Jelszó" @bind="password">
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Bejelentkezés</button>
                        </div>
                        <div class="text-center mb-3">
                            <NavLink href="/newPassword" class="text-decoration-none">Elfelejtett jelszó</NavLink>
                        </div>
                        <div class="text-center">
                            <NavLink href="/registration" class="text-decoration-none">Regisztráció</NavLink>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @errorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


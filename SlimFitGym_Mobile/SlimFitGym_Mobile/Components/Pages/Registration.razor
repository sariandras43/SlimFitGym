@page "/registration"
@using SlimFitGym_Mobile.Models
@inject NavigationManager NavigationManager
@using SlimFitGym_Mobile.Services
@inject DataService DataService
@inject AuthService AuthService

<div class="border rounded-3 d-inline-block mt-3">
    <NavLink href="/" class="d-block p-1">
        <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAeCAYAAAA7MK6iAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAeUlEQVR4nO3XQQrCMBCF4e8MWkrvErLw/oeRWlxXChHEVRd1hHT+C/zJ42WY0BEjrtHSigfukfKKBStmXCKkpd10kz5xS+mRZLw/pWR7u4t3+JAubSzqWvy3qN+kfM3YBVKy7c72zuvXejtEy+d2gO1HEcqIKVq6mxcYKlU4XwQ2VAAAAABJRU5ErkJggg==" alt="back">
    </NavLink>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Regisztráció</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Név</label>
                            <input type="text" class="form-control" id="name" placeholder="Név" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Jelszó</label>
                            <input type="password" class="form-control" id="password" placeholder="Jelszó" required>
                        </div>
                        <div class="mb-3">
                            <label for="passwordAgain" class="form-label">Jelszó újra</label>
                            <input type="password" class="form-control" id="passwordAgain" placeholder="Jelszó újra" required>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary" @onclick="register">Regisztráció</button>
                        </div>
                        <div class="text-center">
                            <NavLink href="/login" class="text-decoration-none">Már van fiókod? Jelentkezz be!</NavLink>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void register()
    {
        // Registration logic here
        NavigationManager.NavigateTo("/login");
    }
}
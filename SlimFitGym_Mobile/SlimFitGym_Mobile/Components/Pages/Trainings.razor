@page "/trainings"
@using SlimFitGym_Mobile.Models
@using SlimFitGym_Mobile.Services
@inject DataService DataService
@inject IJSRuntime JS

<Header/>

<div class="container mt-2 d-flex flex-column">
@if (AccountModel.LoggedInUser?.Role == "trainer")
{
    <div class="sticky-top py-3 bg-white d-flex align-items-center justify-content-between">
        <h2 class="text-center flex-grow-1 fw-bold">Elérhető edzésprogramok</h2>
        <NavLink href="/addTraining">
            <img class="fw-bold mb-2" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAeCAYAAAA7MK6iAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAc0lEQVR4nO2UMQqAMAxF3/Gsg3j/wULVQS8Rl05FpGATpeTBX/MgCR+cnzMDJ3AAk6V4ByRnsxRLERerIb5qK6SbVY9AvBn8NhEIT+KkIK1quPSVOACLgnQBBhrQz1fX4mIzxG9sRSzKwYwArDlNGslBiwtYs6fhOILl9QAAAABJRU5ErkJggg==" alt="plus-math">
        </NavLink>
    </div>
}
else
{
    <div class="sticky-top py-3 bg-white">
        <h2 class="text-center fw-bold">Elérhető edzésprogramok</h2>
    </div>
}
    <div class="overflow-auto flex-grow-1">
        <div class="row row-cols-1 g-4">
            @foreach (var training in trainings)
            {
                bool isSignedUp = signedUpTrainings.Contains(training.Id);

                <div class="card col d-flex m-2 me-3 ms-3 w-75 @(training.Id % 2 == 0 ? "me-auto" : "ms-auto")">
                    <div class="card-body">
                        <h5 class="card-title">@training.Name</h5>
                        <p class="card-text">🏋️ Edző: <b>@training.TrainerId</b></p>
                        <p class="card-text">📅 Dátum: <b>@training.TrainingStart.ToString("yyyy.MM.dd HH:mm")</b></p>
                        <p class="card-text">Férőhelyek: @training.MaxPeople</p>
                        @if (AccountModel.LoggedInUser != null)
                        {
                            <button class="btn @(isSignedUp ? "btn-danger" : "btn-primary") float-end"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmModal"
                                    @onclick="() => ShowConfirmation(training.Id, isSignedUp)">
                                @(isSignedUp ? "Visszavonás" : "Jelentkezés")
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@modalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Vissza</button>
                <button type="button" class="btn btn-primary" @onclick="ConfirmAction">Igen</button>
            </div>
        </div>
    </div>
</div>

<Navbar />

@code {
    public static List<TrainingModel> trainings = TrainingModel.GetTrainings();
    // private List<TrainingModel>? trainings = new List<TrainingModel>();
    // protected override async Task OnInitializedAsync()
    // {
    //     trainings = await DataService.GetMachines();
    // }

    private HashSet<int> signedUpTrainings = new();
    private string modalTitle = "Biztosan szeretnél jelentkezni?";
    private int selectedTrainingId;

    private void ShowConfirmation(int trainingId, bool isSignedUp)
    {
        selectedTrainingId = trainingId;
        modalTitle = isSignedUp ? "Biztosan szeretnéd visszavonni a jelentkezést?" : "Biztosan szeretnél jelentkezni?";
        StateHasChanged();
    }

    private async Task ConfirmAction()
    {
        if (signedUpTrainings.Contains(selectedTrainingId))
        {
            signedUpTrainings.Remove(selectedTrainingId);
        }
        else
        {
            signedUpTrainings.Add(selectedTrainingId);
        }

        StateHasChanged();
        await JS.InvokeVoidAsync("closeModal", "confirmModal");
    }
}
